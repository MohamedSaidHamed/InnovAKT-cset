<Theme xmlns="http://wixtoolset.org/themes">
  <Window Width="485" Height="300" Title="CSET Installation">
    <Page Name="Install">
      <Button Name="InstallButton" X="-11" Y="-11" Width="75" Height="23" FontId="0">Install</Button>
      <Button Name="WelcomeCancelButton" X="-11" Y="-11" Width="75" Height="23" FontId="0">Cancel</Button>
    </Page>
    <Page Name="Progress">
      <Text X="10" Y="10" Width="-10" Height="17" FontId="0">Please wait while CSET is being installed.</Text>
      <Button Name="ProgressCancelButton" X="-11" Y="-11" Width="75" Height="23" FontId="0">Cancel</Button>
    </Page>
    <Page Name="Success">
      <Text X="10" Y="10" Width="-10" Height="17" FontId="0">CSET has been successfully installed.</Text>
      <Button Name="SuccessLaunchButton" X="-91" Y="-11" Width="75" Height="23" FontId="0">Launch</Button>
      <Button Name="SuccessCancelButton" X="-11" Y="-11" Width="75" Height="23" FontId="0">Finish</Button>
    </Page>
    <Page Name="Failure">
      <Text X="10" Y="10" Width="-10" Height="17" FontId="0">CSET installation failed.</Text>
      <Button Name="FailureCancelButton" X="-11" Y="-11" Width="75" Height="23" FontId="0">Close</Button>
    </Page>
  </Window>
</Theme>